@model IEnumerable<mls.Models.Pfep>

@{
    ViewBag.Title = "ManagePfep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage PFEP</h2>

<p>
    @Html.ActionLink("Go Back", "Index") | @Html.ActionLink("Create New", "Create")
</p>
<table id="pfep" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerPn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PfepTx)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Min)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Max)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KbQty)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PfepId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PfepId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PfepId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerPn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PfepTx)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Min)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Max)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KbQty)
                </td>

            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
            $(document).ready(function() {
                $("#pfep").DataTable({
                  'iDisplayLength': 100 });
                });

    </script>
}