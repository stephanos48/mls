@using mls.Models
@model IEnumerable<mls.Models.ShipOut>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ship Out History</h2>

<p>
    @Html.ActionLink("Go Back", "Index", "ShipIns", null, null) | @Html.ActionLink("Create New", "Create")
</p>

@*@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}*@

<table id="shipout" class="table table-bordered table-hover table-striped" >
    <thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Carrier)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrackingInfo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quote)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PoNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pn)
        </th>
        @*<th>
            @Html.ActionLink("Pn", "ShipOut", new { sortOrder = ViewBag.NameSortParm})
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Sn)
        </th>
        @*<th>
            @Html.ActionLink("ShipDate", "ShipOut", new {sortOrder = ViewBag.NameSortParm})
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.ShipDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>

    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ShipOutId })|
                    @Html.ActionLink("Details", "Details", new { id = item.ShipOutId })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.ShipOutId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Carrier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrackingInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PoNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            </tr>

        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document)
            .ready(function() {
                $("#shipout").DataTable();
            });

    </script>
}
