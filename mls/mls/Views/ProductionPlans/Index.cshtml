@model IEnumerable<mls.Models.ProductionPlan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Go Back", "ScheduleHome", "ProductionPlans", null, null) | @Html.ActionLink("Create New", "Create")
</p>

<table id="pp" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Pn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalOrders)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnHold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductionPlanId })|
                    @Html.ActionLink("Details", "Details", new { id = item.ProductionPlanId })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductionPlanId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalOrders)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnHold)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Day5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#pp").DataTable({
                'iDisplayLength': 100
            });
        });

    </script>
}