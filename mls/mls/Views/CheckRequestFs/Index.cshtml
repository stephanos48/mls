@model IEnumerable<mls.Models.CheckRequestF>

@{
    ViewBag.Title = "Index";
}

<h2>Check Request</h2>

<p>
    @Html.ActionLink("Go Back", "Index", "Pfeps", null, null) | @Html.ActionLink("Tiered View", "Tiered") | @Html.ActionLink("Create New", "Create") | @Html.ActionLink("Closed/Cashed", "Closed") | @Html.ActionLink("Closed/Denied", "Denied")
