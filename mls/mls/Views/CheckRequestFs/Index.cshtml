                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActualMailDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrackingInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>

            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#check").DataTable({
                'iDisplayLength': 100 });
            });

    </script>
}