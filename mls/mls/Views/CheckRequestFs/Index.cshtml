                @Html.DisplayNameFor(model => model.Notes)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CheckRequestFId })|
                    @Html.ActionLink("Details", "Details", new { id = item.CheckRequestFId })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.CheckRequestFId })
