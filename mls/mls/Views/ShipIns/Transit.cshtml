@model IEnumerable<mls.Models.ShipIn>

@{
    ViewBag.Title = "Transit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>In Transit</h2>

<p>
    @Html.ActionLink("Go Back", "Index") | @Html.ActionLink("Create New", "Create")
</p>
@if (!Model.Any())
{
    <p>There are currently no parts in transit.</p>
}
else
{

@*<table class="table table-bordered table-hover">*@
    <table id="transit" class="table table-bordered table-hover">
        <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContainerUh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etadate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.ShipInId})|
                    @Html.ActionLink("Details", "Details", new {id = item.ShipInId})|
                    @Html.ActionLink("Delete", "Delete", new {id = item.ShipInId})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContainerUh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shipdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Etadate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>

            </tr>
        }
        </tbody>
    </table>
}


@section scripts
{
    <script>
        $(document).ready(function() {
               $("#transit").DataTable();
            });
    
    </script>
}
