@model List<mls.ViewModels.QohViewModel>

@{
    ViewBag.Title = "HeilQoh";
}

<h2>Heil Qoh</h2>

<p>
    @Html.ActionLink("Go Back", "NewEsgHome")
</p>


<table id="qoh" class="table table-bordered table-hover">

    <thead>
        <tr>
            <th>
                Part Number
            </th>
            <th>
                Qoh
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qoh)
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#qoh").DataTable({
                'iDisplayLength': 100 });
            });

    </script>
}


