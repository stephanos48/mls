@model IEnumerable<mls.Models.CustomerOrder>
@{
    ViewBag.Title = "Forum";
}

<h2>Forum</h2>

@section Scripts {
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/js/simpleControls.js"></script>
    <script src="~/js/app-customers.js"></script>
    <script src="~/js/customersController.js"></script>
}

<div class="row" ng-app="app-customers">

    <div ng-controller="customersController as vm" class="col-md-6 col-md-offset-3">
        <div class="text-danger" ng-show="vm.errorMessage">{{vm.errorMessage}}</div>
        <wait-cursor display-when="vm.isBusy"></wait-cursor>
        <table class="table table-responsive table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="customer in vm.customers">
                    <td>{{customer.customerName}}</td>
                    <td>{{customer.customerType}}</td>
                    <td><a href="#" class="btn btn-sm btn-primary">Manage</a></td>
                </tr>
            </tbody>
        </table>

        <form novalidate name="newCustomerForm" ng-submit="vm.addCustomer">

            <div class="form-group">
                <label for="name">Customer Name</label>
                <input class="form-control" type="text" id="name" name="name" ng-model="vm.newCustomer.name" />
                <span ng-show="newCustomerForm.name.$error.required" class="text-warning">Name is required.</span>
                <span ng-show="newCustomerForm.name.$error.required" class="text-warning">Name must be at least five characters.</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success btn-sm" ng-disabled="newCustomerForm.$invalid" />
            </div>
        </form>

    </div>

</div>
