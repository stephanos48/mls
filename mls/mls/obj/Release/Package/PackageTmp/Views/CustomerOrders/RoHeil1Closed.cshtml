                    @Html.DisplayFor(mmodelItem => item.ShipQty)
                </td>
                <td>
                    @Html.DisplayFor(mmodelItem => item.RequestedDateTime)
                </td>
                <td>
                    @Html.DisplayFor(mmodelItem => item.PromiseDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipDateTime)
                </td>
                <td>
                    @Html.DisplayFor(mmodelItem => item.Notes)
                </td>

            </tr>
        }
