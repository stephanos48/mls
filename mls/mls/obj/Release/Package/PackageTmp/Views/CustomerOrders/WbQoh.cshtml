@model List<mls.ViewModels.QohViewModel>

@{
    ViewBag.Title = "WB Qoh";
}

<h2>WB Qoh</h2>

<p>
    @Html.ActionLink("Go Back", "NewHomeWb") | <button id="btn" class="btn btn-success">Export to Excel</button>
</p>


<table id="qoh" class="table table-bordered table-hover">
    
    <thead>
    <tr>
        <th>
            Part Number
        </th>
        <th>
            Qoh
        </th>
        <th>
            Ncr
        </th>
        <th>
            Notes
        </th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Pn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qoh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NcrQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
            </tr>
        }
        </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#qoh").DataTable({
                'iDisplayLength': 1000 });
            });

    </script>

    <script src="https://cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
    <script type="text/javascript">
                    $('#btn').click(function(){
                        $('.table').table2excel({
                            name: "download",
                            filename: "download",
                            fileext: ".xlsx"
                        });
                    });
    </script>
}