@model IEnumerable<mls.Models.ScrumDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Scrum Details</h2>

<p>
    @Html.ActionLink("Create New", "Create") | @Html.ActionLink("ScrumHome", "ScrumHome", "Scrums", null, null) | @Html.ActionLink("Production Meeting", "ProductionMeeting", "Scrums", null, null)
