@model IEnumerable<mls.Models.CustomerQuote>

@{
    ViewBag.Title = "CQ";
}

<h2>Customer Quotes</h2>

<p>
    @Html.ActionLink("Go Back", "Sales", "ShipPlans", null, null) | @Html.ActionLink("Create New", "Create")
</p>
<table id="customerquote" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.QuoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExchangeRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsaBom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FreightCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tariff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CustomerQuoteId })|
                    @Html.ActionLink("Details", "Details", new { id = item.CustomerQuoteId })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.CustomerQuoteId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuoteDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExchangeRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsaBom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FreightCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tariff)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
            </tr>
        }

    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#customerquote").DataTable({
              'iDisplayLength': 100 });
            });

    </script>
}