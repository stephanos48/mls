@model IEnumerable<mls.Models.ShipPlan>

@{
    ViewBag.Title = "EsgPcOpen";
}

<h2>Esg Pc Open Orders</h2>

<p>
    @Html.ActionLink("Go Back", "EsgPcStatus")
</p>
<table id="shipplan" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerOrderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerOrderLine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerPn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PromiseDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ShipPlanId })|
                    @Html.ActionLink("Details", "Details", new { id = item.ShipPlanId })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.ShipPlanId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerOrderNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerOrderLine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerPn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PromiseDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>

            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#shipplan").DataTable({
                'iDisplayLength': 100 });
        });

    </script>
}

