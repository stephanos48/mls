@model IEnumerable<mls.Models.Checklist>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checklist Home</h2>

<p>
    @Html.ActionLink("Go Back", "Index", "Scrums", null, null) | @Html.ActionLink("Create New", "Create")
</p>
<table id="checklist" class="table" table-bordered table-hover"> 
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChecklistTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChecklistAction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ChecklistId })|
                    @Html.ActionLink("Details", "Details", new { id = item.ChecklistId })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.ChecklistId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChecklistTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChecklistAction)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#checklist").DataTable({
              'iDisplayLength': 100 });
            });

    </script>
}