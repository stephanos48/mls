@model IEnumerable<mls.Models.PurchaseOrder>

@{
    ViewBag.Title = "BaynePo";
}

<h2>Bayne Po</h2>

<p>
    @Html.ActionLink("Go Back", "PoHome", "PurcahseOrders", null, null) | @Html.ActionLink("Create New", "Create")
</p>
<table id="baynepo" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.PoNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UhPn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceivedQty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PromiseDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiptDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PurchaseOrderId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PurchaseOrderId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PurchaseOrderId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PoNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SupplierId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UhPn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceivedQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestedDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PromiseDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiptDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PoOrderStatusId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>

            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#baynepo").DataTable({
                'iDisplayLength': 100 });
        });

    </script>
}