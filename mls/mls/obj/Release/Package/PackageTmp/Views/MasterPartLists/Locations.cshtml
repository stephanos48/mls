@model List<mls.ViewModels.LocationViewModel1>

@{
    ViewBag.Title = "Locations";
}

<h2>Locations</h2>

<p>
    @Html.ActionLink("Go Back", "Index", "ShipIns", null, null)
</p>
<table id="locations" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            CustomerPn
        </th>
        <th>
            Part Description
        </th>
        <th>
            Location
        </th>
        <th>
            Qoh
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerPn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qoh)
            </td>
        </tr>
    }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#locations").DataTable({
                'iDisplayLength': 100 });
            });

    </script>
}