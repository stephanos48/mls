@{
    ViewBag.Title = "ScrumHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Scrum Home</h2>

<p>
    @Html.ActionLink("Go Back", "Index", "Scrums", null, null) | @Html.ActionLink("Create New", "Create") | @Html.ActionLink("Tracker", "ScrumTracker", "Scrums", null, null) | @Html.ActionLink("Executive", "Executive", "Scrums", null, null) | @Html.ActionLink("Ops", "Production", "Scrums", null, null) | @Html.ActionLink("Sales", "Sales", "Scrums", null, null) | @Html.ActionLink("Logistics", "Logistics", "Scrums", null, null) | @Html.ActionLink("Finance", "Finance", "Scrums", null, null) | @Html.ActionLink("Eng", "Engineering", "Scrums", null, null) | @Html.ActionLink("SC", "Sc", "Scrums", null, null) | @Html.ActionLink("IT", "It", "Scrums", null, null) | @Html.ActionLink("Quality", "Quality", "Scrums", null, null) | @Html.ActionLink("Inventory", "Inventory", "Scrums", null, null) | @Html.ActionLink("Maintenance", "Maintenance", "Scrums", null, null)
    
</p>

<br />

<table id="scrum" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th></th>
        <th>ScrumId</th>
        <th>Creation Date</th>
        <th>Action</th>
        <th>Scrum Status</th>
        <th>Due Date</th>
        <th>Completion Date</th>
        <th>Notes</th>
        @*<th></th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedById)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResponsibleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassificationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScrumStatusId)
