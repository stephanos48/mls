@model IEnumerable<mls.Models.WoBuild>

@{
    ViewBag.Title = "WoBuild";
}

<h2>Wo Build Adjustments</h2>

<p>
    @Html.ActionLink("Go Back", "Home", "TxQohs1", null, null) | @Html.ActionLink("Create New", "Create")
</p>
<table id="wobuild" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.WoEnterDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WoNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerPn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.WoBuildId })|
                    @Html.ActionLink("Details", "Details", new { id = item.WoBuildId })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.WoBuildId })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WoEnterDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WoNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerPn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#wobuild").DataTable({
              'iDisplayLength': 100 });
            });

    </script>
}