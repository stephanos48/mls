@model List<mls.ViewModels.VtQohViewModel>

@{
    ViewBag.Title = "VtQoh";
}

<h2>Value Added Qoh UH</h2>

<p>
    @Html.ActionLink("Go Back", "Index", "VtPfeps", null, null) | @Html.ActionLink("Create New", "Create")
</p>
<br />
<table id="txqoh" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                Id
            </th>
            <th>
                PN
            </th>
            <th>
                QOH
            </th>
            <th>
                Ncr Qty
            </th>
            <th>
                Pfep Esg
            </th>
            <th>
                Pfep Value Added
            </th>
            <th>
                Min Qty
            </th>
            <th>
                Max Qty
            </th>
            <th>
                KB Qty
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Vtqohid })|
                    @Html.ActionLink("Details", "Details", new { id = item.Vtqohid })|
                    @Html.ActionLink("Delete", "Delete", new { id = item.Vtqohid })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vtqohid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qoh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NcrQty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PfepEsg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PfepVt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinVt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinVt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxVt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KbQty)
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#txqoh").DataTable({
              'iDisplayLength': 100 });
            });

    </script>
}
