@model List<mls.ViewModels.NewShipPlanFViewModel>

@{
    ViewBag.Title = "OHNotShipped";
}

<h2>Open Orders w/ QOH, Not Shipped</h2>

<p>
    <button id="btn" class="btn btn-success">Export to Excel</button><br /><br />
    @Html.ActionLink("Go Back", "Sales") 
</p>
<table id="shipplan" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th></th>
            <th>
                Pn
            </th>
            <th>
                Qoh
            </th>
            <th>
                Notes
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerPn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Qoh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#shipplan").DataTable({
                'iDisplayLength': 200 });
        });

    </script>

    <script src="https://cdn.rawgit.com/rainabba/jquery-table2excel/1.1.0/dist/jquery.table2excel.min.js"></script>
    <script type="text/javascript">
                        $('#btn').click(function(){
                            $('.table').table2excel({
                                name: "download",
                                filename: "download",
                                fileext: ".xlsx"
                            });
                        });
    </script>
}

